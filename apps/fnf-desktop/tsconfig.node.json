{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "ES2022"
    ],
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "baseUrl": "."
  },
  "include": [
    "electron-main/**/*.ts",
    "electron-preload/**/*.ts",
    "vite.config.ts"
  ]
}
