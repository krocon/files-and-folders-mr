{
  "name": "files-and-folders-mr",
  "version": "2.0.0",
  "description": "Files and Folders project with Angular and NestJS",
  "scripts": {
    "pnpm-i": "pnpm i -f",
    "start:fnf": "pnpm --filter fnf start",
    "start:fnf-api": "pnpm --filter fnf-api start",
    "start:screenshot": "pnpm --filter screenshot start",
    "prebuild": "node update-version.js",
    "build:fnf": "pnpm --filter fnf build",
    "build:fnf-api": "pnpm --filter fnf-api build",
    "build:fnf-data": "pnpm --filter fnf-data build",
    "build:screenshot": "pnpm --filter screenshot build",
    "build": "pnpm build:fnf-data && pnpm build:fnf && pnpm build:fnf-api",
    "build:all": "NODE_ENV=production && pnpm build",
    "prepush": "node update-version.js",
    "test:fnf": "pnpm --filter fnf test ",
    "test:fnf-api": "pnpm --filter fnf-api test",
    "e2e:fnf": "pnpm --filter fnf e2e",
    "test": "pnpm test:fnf && pnpm test:fnf-api",
    "e2e": "pnpm e2e:fnf",
    "install:all": "pnpm install && pnpm --filter fnf-data install && pnpm --filter fnf install && pnpm --filter fnf-api install ",

    "docker:build": "docker build . -t krocon/files-and-folders-mr",
    "docker:deploy": "docker push krocon/files-and-folders-mr:latest",
    "docker:imac:imac-run": "docker run -p 3333:3333 -p 3334:3334 -v /Users:/fnf/Users -v /Volumes:/fnf/Volumes --name fnf --env=FNF_INCOMPATIBLE_PATHS='' --env=FNF_START_PATH='fnf' --env=NODE_ENV=production -d krocon/files-and-folders-mr",
    "docker:compose:up": "docker compose up",
    "docker:compose:down": "docker compose down",
    "docker-restart": "docker container start fnf",
    "docker:kill": "docker kill files-and-folders-mr",
    "docker:kill2": "docker kill $(docker ps | grep  ' krocon/files-and-folders-mr ' | awk '{ print $1 }') ",
    "docker:container-ls": "docker container ls",
    "docker:remove": "docker stop fnf && docker container rm fnf && docker image rm krocon/files-and-folders-mr -f",
    "docker:container-remove-danling": "docker rmi $(docker images -f \"dangling=true\" -q)",
    "docker:images": "docker images",
    "docker:rm": "docker image rm krocon/files-and-folders-mr -f",
    "docker:image-prune": "docker image prune -f",
    "docker-bash": "docker run -it --rm krocon/files-and-folders-mr /bin/bash ",
    "docker:print-container-id": "docker ps | grep  ' krocon/files-and-folders-mr ' | awk '{ print $1 }'",
    "docker:logs": "docker logs $(docker ps | grep  ' krocon/files-and-folders-mr ' | awk '{ print $1 }') "
  },
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
